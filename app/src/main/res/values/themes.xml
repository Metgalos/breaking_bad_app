        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">@dimen/random_character_margin</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="quote_list_element">
        <item name="android:layout_margin">@dimen/small_margin</item>
    </style>

    <style name="character_response_row">
        <item name="android:layout_margin">@dimen/small_margin</item>
    </style>

    <style name="detail_character_text">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginTop">@dimen/medium_margin</item>
        <item name="android:layout_marginBottom">@dimen/medium_margin</item>
    </style>

    <style name="search_button.">
        <item name="android:background">@color/transparent</item>
